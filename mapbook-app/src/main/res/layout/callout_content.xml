<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/calloutLinearLayout"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/layerName"
                  android:layout_marginBottom="16dp"
                  android:layout_weight="5"/>

        <Button android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/btnPrev" android:alpha="0.3"
                android:background="@drawable/ic_navigate_before_black_36px"
                android:paddingTop="3dp"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/popupCount"/>

        <Button android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/btnNext"
                android:background="@drawable/ic_navigate_next_black_36px"
                android:paddingTop="3dp"/>
        <Button android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/btnClose"
                android:background="@drawable/ic_close_black_36px" android:paddingTop="3dp"/>

    </LinearLayout>


</LinearLayout>